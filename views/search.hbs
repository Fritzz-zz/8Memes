    <body>
        <header>
             <div class="titlearea"></div> 
            
            <div class= "homearea">
                <form action="home">
                    <input type=image src="images\home.png" id="home">
                </form>
                <form action="about">
                    <input type="submit" value="About" id="about">
                </form>
            </div>
            <div class="searcharea">
                
                <form action ="searchmeme" method="post">
                    <input type="text" id="chat_input" name="searchmemeinput"/>
                    <input type=image src="images\search.png" id="submit" required="required">
                </form>
                
            </div>  
            
            <div class="usernamearea">
                <form action="goprofile" method="post">
                    <input type="text" value="{{username}}" name="profile" hidden="hidden">
                    <input type="submit" id="username" value="{{username}}">
                </form>
            </div>
            
            <div class="logoutarea">

                <form action="logout">
                    <input type=image src="images\logout.png" id="logout">
                </form>
            </div>
        </header>
        <div class ="tagnamearea">
            <div class ="tagname">Search: {{vartag}}</div>
        </div>
        
        <form id="memetitleform" action = "openmeme" method = "POST">
            <input id="memetitleid" type="hidden" name = "id">
        </form>

        <section class="memes">
            
            {{#each memes}}
            <div class = "memebox">
                
                <div class= "memetitle">
                    <button id= "memetitle" class="memetitle" data-id ="{{_id}}">{{title}}</button>
                </div>
                
                <div class= "mememediabox">
                    <div><img src="images/{{image}}" class= "memeimage"> </div>
                </div>
                
                <div class= "userwhopostedmemebox">
                    <form action="goprofile" method="post">
                        <input type="text" value="{{poster}}" name="profile" hidden="hidden">
                        <input type="submit" id="user" value="@{{poster}}">
                    </form>
                </div>
                
                <div class = "memetagsarea">Tags: 
                    <div class="memetag">{{tag}}</div>
                </div>   
                <div class ="likesharearea">
                    <form action ="share" method="post" id="sharearea">
                  <!-- <div id="sharebutton">Share</div> -->
                    <input type="submit" value="Share" id="shareinput" required="required">
                    </form>
                </div>
            </div>
            {{/each}}
            
           
