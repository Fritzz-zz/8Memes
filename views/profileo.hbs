                <form action="about">
                    <input type="submit" value="About" id="about">
                </form>
            </div>
            <div class="searcharea" >
                
                <form action ="searchmeme" method="post">
                    <input type="text" id="chat_input" name="searchmemeinput"/>
                    <input type=image src="images\search.png" id="submit" required="required">
                </form>
                
            </div>    
            <div class="loginarea">
                <form action="gotologin">
                    <input type="submit" value="Log In" id="login">
                </form>
                <form action="gotosignup">
                    <input type="submit" value="Sign Up" id="signup">
                </form>
            </div>
        </header>

        <form id="memetitleform" action = "openmeme" method = "POST">
            <input id="memetitleid" type="hidden" name = "id">
        </form>
    
    <section class="memes">
            {{#each memes}}
            <div class = "memebox">
                
                <div class= "memetitle">
                    <button id= "memetitle" class="memetitle" data-id ="{{_id}}">{{title}}</button>
                </div>
                
                <div class= "mememediabox">
                    <div><img src="images/{{image}}" class= "memeimage"> </div>
                </div>
                
                <div class= "userwhopostedmemebox">
                    <form action="goprofile" method="post">
                        <input type="text" value="{{poster}}" name="profile" hidden="hidden">
                        <input type="submit" id="user" value="@{{poster}}">
                    </form>
                </div>
                <div class = "memetagsarea">Tags: 
                    <div class="memetag">{{tag}}</div>
                </div>
            </div>
            {{/each}}
    </section>

    <section class="user">
        
        <div class="userbox">
            {{#each user}}
            <div class="user_container">
                <div ><img src="images/{{profilepic}}" class="DP"></div>
            </div>
            <div class="right">
                <span class="username">{{fullname}}</span>
                <span class="usertag">@{{username}}</span>
                <div class="description">{{desc}}</div>
            {{/each}}
                <div class="recent">Recently posted Meme:</div>
